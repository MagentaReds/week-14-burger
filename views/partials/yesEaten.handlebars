<div>
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>  
          <p>{{this.burger_name}}</p>
          <p>Has been ated.</p>
          <form action="/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">TRASH WRAPPER!</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>
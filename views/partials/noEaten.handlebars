<div>
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>  
          <p>{{this.burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">DEVOUR ME!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>